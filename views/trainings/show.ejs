<%- include('../partials/header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4"><%= training.title %></h2>
                    
                    <div class="mb-4">
                        <h5>Eğitim Detayları</h5>
                        <p class="card-text"><%= training.description %></p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <p><strong>Başlangıç Tarihi:</strong> <%= new Date(training.start_date).toLocaleDateString('tr-TR') %></p>
                            <p><strong>Süre:</strong> <%= training.duration %> saat</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Eğitmen:</strong> <%= training.instructor %></p>
                            <p><strong>Kontenjan:</strong> <%= training.capacity %> kişi</p>
                        </div>
                    </div>

                    <% if (typeof user != 'undefined' && user) { %>
                        <% if (!isRegistered) { %>
                            <form action="/trainings/<%= training.id %>/register" method="POST">
                                <button type="submit" class="btn btn-primary">Eğitime Katıl</button>
                            </form>
                        <% } else { %>
                            <div class="alert alert-success">
                                Bu eğitime kayıtlısınız.
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="alert alert-info">
                            Eğitime katılmak için <a href="/login">giriş yapın</a> veya <a href="/register">kayıt olun</a>.
                        </div>
                    <% } %>
                </div>
            </div>

            <div class="mt-4">
                <a href="/trainings" class="btn btn-secondary">Eğitimlere Dön</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 