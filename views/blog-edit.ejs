<%- include('partials/header') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title h3 mb-4">Blog Yazısını Düzenle</h1>
                    
                    <form action="/blog/<%= post.id %>/edit" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label">Başlık</label>
                            <input type="text" class="form-control" id="title" name="title" value="<%= post.title %>" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="content" class="form-label">İçerik</label>
                            <textarea class="form-control" id="content" name="content" rows="10" required><%= post.content %></textarea>
                        </div>
                        
                        <% if (post.image_url) { %>
                            <div class="mb-3">
                                <label class="form-label">Mevcut Görsel</label>
                                <div>
                                    <img src="<%= post.image_url %>" alt="<%= post.title %>" class="img-fluid rounded" style="max-height: 200px;">
                                </div>
                            </div>
                        <% } %>
                        
                        <div class="mb-3">
                            <label for="image" class="form-label">Yeni Görsel</label>
                            <input type="file" class="form-control" id="image" name="image" accept="image/*">
                            <div class="form-text">Yeni bir görsel seçmezseniz mevcut görsel korunacaktır.</div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                            <a href="/blog/<%= post.id %>" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 