<%- include('../partials/header') %>

<div class="container mt-5">
    <h2 class="mb-4">Yorumlarım</h2>

    <% if (comments && comments.length > 0) { %>
        <div class="row">
            <% comments.forEach(comment => { %>
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/blog/<%= comment.post_id %>" class="text-decoration-none">
                                    <%= comment.post_title %>
                                </a>
                            </h5>
                            <p class="card-text"><%= comment.content %></p>
                            <div class="mt-3">
                                <p class="mb-1">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar"></i> <%= new Date(comment.created_at).toLocaleDateString('tr-TR') %>
                                    </small>
                                </p>
                            </div>
                            <a href="/blog/<%= comment.post_id %>" class="btn btn-primary mt-3">Yazıya Git</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="alert alert-info">
            Henüz hiç yorum yapmadınız. <a href="/blog">Blog yazılarını görüntülemek için tıklayın</a>.
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %> 