<%- include('partials/header') %>

<div class="hero-section" style="background-image: url('/images/backgrounds/arkaplan_a.jpg');">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card bg-transparent text-white border-0">
                    <div class="card-body text-center">
                        <h1 class="display-4 mb-4">YBS Dernek'e Hoş Geldiniz</h1>
                        <p class="lead">Yönetim Bilişim Sistemleri Derneği'nin resmi web sitesine hoş geldiniz.</p>
                        <div class="mt-4">
                            <% if (user) { %>
                                <a href="/donate" class="btn btn-lg btn-primary">
                                    <i class="fas fa-heart"></i> Bağış Yap
                                </a>
                            <% } else { %>
                                <a href="/login" class="btn btn-lg btn-primary">
                                    <i class="fas fa-heart"></i> Bağış Yapmak İçin Üye Olun
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-alt fa-3x mb-3 text-primary"></i>
                    <h3 class="card-title">Etkinlikler</h3>
                    <p class="card-text">Derneğimizin düzenlediği etkinlikleri görüntüleyin ve katılım sağlayın.</p>
                    <a href="/events" class="btn btn-primary">Etkinlikleri Görüntüle</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-briefcase fa-3x mb-3 text-success"></i>
                    <h3 class="card-title">İş İlanları</h3>
                    <p class="card-text">Sektördeki güncel iş ilanlarını görüntüleyin ve başvurun.</p>
                    <a href="/jobs" class="btn btn-success">İş İlanlarını Görüntüle</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-newspaper fa-3x mb-3 text-info"></i>
                    <h3 class="card-title">Blog</h3>
                    <p class="card-text">Sektörle ilgili güncel yazıları ve haberleri okuyun.</p>
                    <a href="/blog" class="btn btn-info">Blog Yazılarını Görüntüle</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-graduation-cap fa-3x mb-3 text-warning"></i>
                    <h3 class="card-title">Eğitimler</h3>
                    <p class="card-text">Sertifika programları ve eğitimler hakkında bilgi alın.</p>
                    <a href="/trainings" class="btn btn-warning">Eğitimleri Görüntüle</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-envelope fa-3x mb-3 text-danger"></i>
                    <h3 class="card-title">İletişim</h3>
                    <p class="card-text">Bizimle iletişime geçin, sorularınızı yanıtlayalım.</p>
                    <a href="/contact" class="btn btn-danger">İletişime Geç</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 